<h3>ユーザー新規登録</h3>
<%= form_for @user, url: users_path, html: {method: :post} do |f| %>
  <% @user.errors.full_messages.each do |message| %>
    <div class = "form-error">
      <%= message %>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag "form-email", "email" %>
    <%= f.text_field :email, id:"form-email", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag "form-password", "password" %>
    <%= f.password_field :password, id:"form-content", class:"form-control" %>
  </div>
  <%= f.submit "登録" , class: "btn btn-primary"%>
<% end %>
