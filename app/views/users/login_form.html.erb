<h3>ログイン</h3>
<%= form_for @user, url: login_path, html: {method: :post} do |f| %>
  <% if @error_message %>
    <div class = "form-error">
      <%= @error_message %>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag "form-email", "email" %>
    <%= f.text_field :email, id:"form-email", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag "form-password", "password" %>
    <%= f.password_field :password, id:"form-content", class:"form-control" %>
  </div>
  <%= f.submit "ログイン" , class: "btn btn-primary"%>
<% end %>
  <p><%= link_to "ユーザー登録がまだの方はこちら", new_user_path, class:"signup_yet"%></p>
