<h3>Login</h3>
<%= form_for @user, url: "/login", html: {method: :post} do |f| %>
  <% if @error_message %>
    <div class = "form-error">
      <%= @error_message %>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag "form-email", "email" %>
    <%= f.text_field :email, id:"form-email", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag "form-password", "password" %>
    <%= f.password_field :password, id:"form-content", class:"form-control" %>
  </div>
  <%= f.submit "Login" , class: "btn btn-primary"%>
<% end %>

<p>ユーザー登録がまだの方はこちら</p>
<%= link_to "Signup", "/signup", class:"btn btn-warning" %>
