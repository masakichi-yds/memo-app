<h3>ユーザー情報編集</h3>
<%= form_for @user, url: user_path(@user.id), html: {method: :patch} do |f| %>
  <% @user.errors.full_messages.each do |message| %>
    <div class = "form-error">
      <%= message %>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag "form-email", "email" %>
    <%= f.text_field :email, id:"form-email", class:"form-control", placeholder: @user.email %>
  </div>
  <div class="form-group">
    <%= label_tag "form-password", "password" %>
    <%= f.password_field :password, id:"form-content", class:"form-control" %>
  </div>
  <%= f.submit "編集送信" , class: "btn btn-primary"%>
<% end %>
