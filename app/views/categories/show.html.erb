<h3><%= @category.name %>'s memo</h3>
<div class="row">
  <% @memos.each do |memo| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header bg-warning text-white">
          <h4><%= memo.title %></h4>
          <p><%= memo.category.name %></p>
          <div class="buttons">
            <%= link_to edit_memo_path(memo.id) do%>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to memo_path(memo.id), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <%= memo.body %>
        </div>
      </div>
    </div>
  <% end %>
</div>
